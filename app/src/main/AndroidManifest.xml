<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.biciclik">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera2"
        android:required="true"/>
    <uses-feature android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".BaseContext.BaseContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Biciclik">

        <uses-library android:name="org.apache.http.legacy" android:required="false" />

        <activity android:name=".Login.LoginActivities">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register1.Register1Activity"/>
        <activity android:name=".RegisterSuccess.RegisterSuccess"/>
        <activity android:name=".Register2.Register2Activity"/>
        <activity android:name=".Register3.Register3Activity"/>
        <activity android:name=".ForgetPassword.ForgetPasswordActivity"/>
        <activity android:name=".DrawerMain" android:theme="@style/AppTheme.NoActionBar"/>

<!--        <activity android:name=".InicioActivity"/>-->
    </application>

</manifest>