<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp">

    <TextView
        style="@style/estiloletra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TextViewInicio"
        android:gravity="right"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <View
        android:id="@+id/dividerI1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="16dp"
        android:gravity="center">
        <TextView
            android:id="@+id/viajes"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/cicla"
            android:gravity="center"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Ahorro Economico"
            android:gravity="center"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Huella de Carbono"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart1"
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart2"
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart3"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
    </LinearLayout>
    <TextView
        style="@style/estiloletra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TextViewViajesgraph"
        android:gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <View
        android:id="@+id/dividerI2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"/>

    <TextView
        style="@style/estiloletra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TextViewTopE"
        android:gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <View
        android:id="@+id/dividerI3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclershippings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>